<Window x:Class="ChessUI.NameForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="Player Names" Height="450" Width="600"
        Background="#002B36"
        WindowStartupLocation="CenterScreen">
    <Border Style="{StaticResource BorderStyle}">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Insert Player Names" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Style="{StaticResource TextStyle}"
               FontSize="24"
               Margin="0,20,0,0"
               />

        <!-- White Player Name Input -->
        <TextBlock Text="White Player:" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center" 
               Margin="60,0,0,120" 
               Style="{StaticResource TextStyle}"
               FontSize="18" 
               FontWeight="Bold"
               />
        <TextBox x:Name="WhitePlayerName" 
                 Width="240" 
                 Height="40" 
                 HorizontalAlignment="Right" 
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Margin="0,0,60,120" 
                 Background="#268BD2" 
                 Foreground="White" 
                 FontSize="16" 
                 BorderThickness="2" 
                 BorderBrush="White" 
                 Padding="5" 
                 FontWeight="Bold" />

        <!-- Black Player Name Input -->
        <TextBlock Text="Black Player:" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center" 
               Margin="60,120,0,0" 
               Style="{StaticResource TextStyle}"
               FontSize="18" 
               FontWeight="Bold" />
        <TextBox x:Name="BlackPlayerName" 
                 Width="240" 
                 Height="40" 
                 HorizontalAlignment="Right" 
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Margin="0,120,60,0" 
                 Background="#859900" 
                 Foreground="White" 
                 FontSize="16" 
                 BorderThickness="2" 
                 BorderBrush="White" 
                 Padding="5" 
                 FontWeight="Bold" />

        <!-- Checkbox for validation -->
        <CheckBox x:Name="EnableValidation" 
                  Content="Enable Validation" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Bottom" 
                  Margin="0,0,0,100" 
                  Foreground="White"
                  FontSize="14"/>

        <!-- Submit Button -->
        <Button Content="Start Game" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Width="120" 
                Height="40" 
                Margin="0,0,0,40" 
                Foreground="White"
                Style="{StaticResource ButtonStyle}" 
                 
                FontWeight="Bold" 
                BorderThickness="0" 
                FontSize="16" 
                Cursor="Hand"
                Click="OnSubmit" />
        <Label x:Name="ReturnMessage" 
               Content="" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Margin="0,10,0,10" 
               FontSize="14" 
               Foreground="AntiqueWhite" 
               Visibility="Hidden" />
    </Grid>
    </Border>
</Window>
